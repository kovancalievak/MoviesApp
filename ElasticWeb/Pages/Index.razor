@page "/"

@inject IElasticService elasticService

<PageTitle>Homepage</PageTitle>

<MudText Typo="Typo.h4" GutterBottom="true">Homepage</MudText>

<MudText Typo="Typo.h6">Right now we have @movieCount.ToString() movies in the database.</MudText>

@code {

    long movieCount;

    protected override void OnInitialized()
    {
        movieCount = elasticService.GetMoviesCount();
    }
}